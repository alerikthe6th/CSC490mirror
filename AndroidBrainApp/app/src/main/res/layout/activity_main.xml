<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.augustana.csc490.androidbrainapp.MainActivity">

    <Button
        android:text="Default Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/btnDefaultDest"
        android:layout_alignRight="@+id/btnConnectSocket"
        android:layout_alignEnd="@+id/btnConnectSocket"
        android:layout_alignLeft="@+id/btnConnectSocket"
        android:layout_alignStart="@+id/btnConnectSocket"
        android:onClick="setDefaultDestination" />

    <Button
        android:text="Launch Voice Control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoiceControl"
        android:onClick="launchVoiceActivity"
        android:layout_below="@+id/btnManualControl"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btnManualControl"
        android:layout_alignEnd="@+id/btnManualControl"
        android:layout_alignLeft="@+id/btnManualControl"
        android:layout_alignStart="@+id/btnManualControl" />

    <Button
        android:text="Connect To Socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConnectSocket"
        android:onClick="connectToSocket"
        android:layout_below="@+id/btnDefaultDest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Launch Manual Control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnManualControl"
        android:onClick="launchControlsActivity"
        android:layout_below="@+id/btnConnectSocket"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/btnConnectSocket"
        android:layout_alignStart="@+id/btnConnectSocket"
        android:layout_alignRight="@+id/btnConnectSocket"
        android:layout_alignEnd="@+id/btnConnectSocket" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etAddress"
        android:hint="DestIP"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/etPort"
        android:hint="DestPort"
        android:layout_below="@+id/etAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
