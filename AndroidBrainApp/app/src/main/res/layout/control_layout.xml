<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.augustana.csc490.androidbrainapp.CameraViewFrag"
    android:id="@+id/ControlsLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackward"
        android:layout_below="@+id/btnLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:background="@drawable/back_arrow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnForward"
        android:layout_marginBottom="60dp"
        android:background="@drawable/front_arrow"
        android:longClickable="false"
        android:layout_above="@+id/btnRight"
        android:layout_toLeftOf="@+id/btnRight"
        android:layout_toStartOf="@+id/btnRight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLeft"
        android:background="@drawable/left_arrow"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnBackward"
        android:layout_toStartOf="@+id/btnBackward" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/btnRight"
        android:background="@drawable/right_arrow"
        android:layout_above="@+id/btnBackward"
        android:layout_toRightOf="@+id/btnBackward"
        android:layout_toEndOf="@+id/btnBackward" />
</RelativeLayout>
